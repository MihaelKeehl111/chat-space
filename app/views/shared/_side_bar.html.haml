.side-box
  .header
    .header__name
      = current_user.name
    = link_to new_group_path, class: "header__icon" do
      = icon('fas', 'edit')
    = link_to edit_user_path(current_user), class: "header__icon" do
      = icon('fas','cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            message   