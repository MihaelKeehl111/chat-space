.message__box
  .message__box__name
    = message.user.name
  .message__box__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.message__text
  - if message.content.present?
    %p.message__text__content
      = message.content
  = image_tag message.image.url, class: 'message__text__image' if message.image.present? 
  
